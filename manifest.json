{
  "name": "Odoo Dev",
  "version": "0.1",
  "manifest_version": 2,
  "description": "Functionalities for Odoo development.",
  "permissions": [
    "storage", 
    "tabs"
  ],
  "browser_action": {
      "default_icon": {                    
        "16": "img/icon16.png",           
        "24": "img/icon24.png",           
        "32": "img/icon32.png"            
      },
      "default_title": "Odoo Dev",
      "default_popup": "main.html"
  },
  "background": {
      "scripts": ["background.js"],
      "persistent": true
  }
}
